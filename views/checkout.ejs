<%- contentFor('body') %>

<!-- Main -->
<div id="main" class="alt"></div>

<!-- Contact -->
<section id="contact">
    <div class="inner">
        <section>
            <header class="major">
                <h1>Checkout</h1>
            </header>

            <form method="post" action="#">
                <div class="fields">
                    <div class="field half">
                        <label for="field-1">Title</label>

                        <select>
                            <option value="">-- Choose --</option>
                            <option value="dr">Dr.</option>
                            <option value="miss">Miss</option>
                            <option value="mr">Mr.</option>
                            <option value="mrs">Mrs.</option>
                            <option value="ms">Ms.</option>
                            <option value="other">Other</option>
                            <option value="prof">Prof.</option>
                            <option value="rev">Rev.</option>
                        </select>
                    </div>

                    <div class="field half">
                        <label for="field-2">Name</label>
                        <input type="text" name="field-2" id="field-2" />
                    </div>

                    <div class="field half">
                        <label for="field-3">Email</label>
                        <input type="text" name="field-3" id="field-3" />
                    </div>

                    <div class="field half">
                        <label for="field-4">Phone</label>
                        <input type="text" name="field-4" id="field-4" />
                    </div>

                    <div class="field half">
                        <label for="field-5">Address 1</label>
                        <input type="text" name="field-5" id="field-5" />
                    </div>

                    <div class="field half">
                        <label for="field-6">Address 2</label>
                        <input type="text" name="field-6" id="field-6" />
                    </div>

                    <div class="field half">
                        <label for="field-7">City</label>
                        <input type="text" name="field-7" id="field-7" />
                    </div>

                    <div class="field half">
                        <label for="field-8">State</label>
                        <input type="text" name="field-8" id="field-8" />
                    </div>

                    <div class="field half">
                        <label for="field-7">Zip</label>
                        <input type="text" name="field-7" id="field-7" />
                    </div>

                    <div class="field half">
                        <label for="field-8">Country</label>

                        <select>
                            <option value="">-- Choose --</option>
                            <option value="">-- Choose --</option>
                            <option value="">-- Choose --</option>
                            <option value="">-- Choose --</option>
                        </select>
                    </div>

                    <div class="field half">
                        <label for="field-9">Payment method</label>

                        <select>
                            <option value="">-- Choose --</option>
                            <option value="">-- Choose --</option>
                            <option value="">-- Choose --</option>
                            <option value="">-- Choose --</option>
                        </select>
                    </div>

                    <div class="field half">
                        <label for="field-9">Captcha</label>
                        <input type="text" name="field-9" id="field-9" />
                    </div>

                    <div class="field">
                        <label class="control-label">
                            <input type="checkbox">

                            I agree with the <a href="/terms" target="_blank">Terms &amp; Conditions</a>
                        </label>
                    </div>


                    <div class="field half text-right">
                        <ul class="actions">
                            <li><input type="submit" value="Finish" class="primary" /></li>
                        </ul>
                    </div>
                </div>
            </form>
        </section>
        <section class="split">
            <section>
                <br>
                <div class="contact-method">
                    <span class="icon alt fa-credit-card"></span>
                    <h3>Sub-total</h3>
                    <span>$ 128.00</span>
                </div>

                <div class="contact-method">
                    <span class="icon alt fa-star"></span>
                    <h3>Extra</h3>
                    <span>$ 0.00</span>
                </div>

                <div class="contact-method">
                    <span class="icon alt fa-file"></span>
                    <h3>Tax</h3>
                    <span>$ 10.00</span>
                </div>

                <div class="contact-method">
                    <span class="icon alt fa-credit-card"></span>
                    <h3>Total</h3>
                    <span>$ 138.00</span>
                </div>

                <div class="contact-method">
                    <span class="icon alt fa-money"></span>
                    <h3>Deposit payment required</h3>
                    <span>$ 20.00</span>
                </div>
            </section>
        </section>
    </div>
</section>